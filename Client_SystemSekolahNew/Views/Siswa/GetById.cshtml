@{
    Layout = "_LayoutSiswa";
    ViewData["Title"] = "Profile Page";
}

<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h5 class="card-title m-0">Profile Siswa</h5>
            </div>
            <div class="card-body">
                <form>
                    <div id="profileSiswa" class="form-group"></div>
                    <button type="button" onclick="ChangePasswordSiswa()" class="btn btn-primary" data-toggle="modal" data-target="#changePasswordSiswaModal">
                        Change Password
                    </button>
                </form>
            </div>
        </div>
        <!-- /.card -->
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="changePasswordSiswaModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div id="bodyChangePasswordSiswa">
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" onclick="SaveChangePassword()" class="btn btn-primary">Save Changes Password</button>
      </div>
    </div>
  </div>
</div>